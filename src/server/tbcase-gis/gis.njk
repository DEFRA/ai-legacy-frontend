{% extends 'layouts/page.njk' %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% set breadcrumbs = [
  {
    text: "Home",
    href: "/"
  },
  {
    text: "TB Case Form",
    href: "/tbcase/case-details"
  },
  {
    text: "GIS",
    href: "/tbcase/gis"
  }
] %}

{% block beforeContent %}
  {{ super() }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <!-- Close form button -->
      <div class="govuk-!-text-align-right govuk-!-margin-bottom-4">
        <a href="/" class="govuk-link" aria-label="Close TB Case Form">
          <span aria-hidden="true">âœ•</span> Close form
        </a>
      </div>
      
      <span class="govuk-caption-l">TBCMS</span>
      <h1 class="govuk-heading-l">TB Case Form - Geographic Information System</h1>
      
      <!-- Case Context Header -->
      <div class="govuk-summary-card govuk-!-margin-bottom-4">
        <div class="govuk-summary-card__title-wrapper">
          <h2 class="govuk-summary-card__title">Case Information</h2>
        </div>
        <div class="govuk-summary-card__content">
          <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">CPH:</dt>
              <dd class="govuk-summary-list__value">01/234/5678</dd>
            </div>
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">Nat Inc:</dt>
              <dd class="govuk-summary-list__value">25/12345</dd>
            </div>
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">Keeper:</dt>
              <dd class="govuk-summary-list__value">John Smith Farms Ltd</dd>
            </div>
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">Status:</dt>
              <dd class="govuk-summary-list__value">Under Restriction</dd>
            </div>
          </div>
        </div>
      </div>

      <!-- Service Navigation -->
      {% set activePage = "gis" %}
      {% include "includes/tb-service-navigation.html" %}

      <!-- GIS Content -->
      <div class="govuk-!-margin-top-6">
        {{ govukInsetText({
          text: "Geographic mapping and spatial analysis tools for TB case management and risk assessment."
        }) }}

        <form action="/tbcase/gis" method="post" novalidate>
          
          <!-- Location Information -->
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
              <h2 class="govuk-fieldset__heading">Location Details</h2>
            </legend>
            
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-half">
                {{ govukInput({
                  label: {
                    text: "Grid Reference",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "OS Grid Reference (e.g. SX 123456)"
                  },
                  id: "grid-reference",
                  name: "grid-reference",
                  value: "SX 912834",
                  classes: "govuk-input--width-15"
                }) }}
              </div>
              <div class="govuk-grid-column-one-half">
                {{ govukInput({
                  label: {
                    text: "What3Words",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Three word location identifier"
                  },
                  id: "what3words",
                  name: "what3words",
                  value: "table.home.silver",
                  classes: "govuk-input--width-20"
                }) }}
              </div>
            </div>

            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-half">
                {{ govukInput({
                  label: {
                    text: "Latitude",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Decimal degrees (e.g. 50.7236)"
                  },
                  id: "latitude",
                  name: "latitude",
                  value: "50.7236",
                  type: "number",
                  step: "any",
                  classes: "govuk-input--width-10"
                }) }}
              </div>
              <div class="govuk-grid-column-one-half">
                {{ govukInput({
                  label: {
                    text: "Longitude",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Decimal degrees (e.g. -3.5339)"
                  },
                  id: "longitude",
                  name: "longitude",
                  value: "-3.5339",
                  type: "number",
                  step: "any",
                  classes: "govuk-input--width-10"
                }) }}
              </div>
            </div>

            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-half">
                {{ govukInput({
                  label: {
                    text: "Elevation (m)",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Height above sea level in metres"
                  },
                  id: "elevation",
                  name: "elevation",
                  value: "125",
                  type: "number",
                  classes: "govuk-input--width-10"
                }) }}
              </div>
              <div class="govuk-grid-column-one-half">
                {{ govukSelect({
                  id: "land-classification",
                  name: "land-classification",
                  label: {
                    text: "Land Classification",
                    classes: "govuk-label--s"
                  },
                  items: [
                    {
                      value: "",
                      text: "Select classification"
                    },
                    {
                      value: "agricultural",
                      text: "Agricultural Land",
                      selected: true
                    },
                    {
                      value: "moorland",
                      text: "Moorland"
                    },
                    {
                      value: "woodland",
                      text: "Woodland"
                    },
                    {
                      value: "urban",
                      text: "Urban/Developed"
                    }
                  ]
                }) }}
              </div>
            </div>
          </fieldset>

          <!-- Environmental Factors -->
          <fieldset class="govuk-fieldset govuk-!-margin-top-6">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
              <h3 class="govuk-fieldset__heading">Environmental Risk Factors</h3>
            </legend>
            
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-half">
                {{ govukCheckboxes({
                  name: "wildlife-presence",
                  fieldset: {
                    legend: {
                      text: "Wildlife Presence",
                      classes: "govuk-fieldset__legend--s"
                    }
                  },
                  items: [
                    {
                      value: "badgers",
                      text: "Badgers"
                    },
                    {
                      value: "deer",
                      text: "Deer"
                    },
                    {
                      value: "other-wildlife",
                      text: "Other wildlife"
                    }
                  ]
                }) }}
              </div>
              <div class="govuk-grid-column-one-half">
                {{ govukCheckboxes({
                  name: "environmental-factors",
                  fieldset: {
                    legend: {
                      text: "Environmental Factors",
                      classes: "govuk-fieldset__legend--s"
                    }
                  },
                  items: [
                    {
                      value: "water-courses",
                      text: "Water courses nearby"
                    },
                    {
                      value: "woodland-boundary",
                      text: "Woodland boundary"
                    },
                    {
                      value: "public-access",
                      text: "Public access routes"
                    }
                  ]
                }) }}
              </div>
            </div>
          </fieldset>

          <!-- Risk Assessment Map -->
          <div class="govuk-!-margin-top-6">
            <h3 class="govuk-heading-m">Interactive Risk Map</h3>
            <div id="risk-map" class="map-container" style="height: 400px; background-color: #f3f2f1; border: 2px solid #b1b4b6; position: relative;">
              <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
                <p class="govuk-body">Interactive map would be displayed here</p>
                <p class="govuk-body-s">Showing: Holding location, risk zones, badger setts, and neighboring premises</p>
                <div class="govuk-button-group">
                  <button type="button" class="govuk-button govuk-button--secondary">
                    Toggle Risk Zones
                  </button>
                  <button type="button" class="govuk-button govuk-button--secondary">
                    Show Badger Setts
                  </button>
                  <button type="button" class="govuk-button govuk-button--secondary">
                    View Neighbors
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Neighboring Holdings -->
          <div class="govuk-!-margin-top-6">
            <h3 class="govuk-heading-m">Neighboring Holdings</h3>
            
            {% set neighboringHoldingsRows = [
              [
                {
                  text: "02/345/6789"
                },
                {
                  text: "Greenfield Farm"
                },
                {
                  text: "0.5"
                },
                {
                  text: "North"
                },
                {
                  text: "Officially TB Free"
                },
                {
                  text: "Low"
                },
                {
                  html: '<a class="govuk-link" href="#" aria-label="View details for Greenfield Farm">View</a>'
                }
              ],
              [
                {
                  text: "01/234/5679"
                },
                {
                  text: "Adjacent Field Farm"
                },
                {
                  text: "0.1"
                },
                {
                  text: "East"
                },
                {
                  text: "Under Restriction"
                },
                {
                  text: "High"
                },
                {
                  html: '<a class="govuk-link" href="#" aria-label="View details for Adjacent Field Farm">View</a>'
                }
              ],
              [
                {
                  text: "01/234/5680"
                },
                {
                  text: "Valley View Holdings"
                },
                {
                  text: "1.2"
                },
                {
                  text: "South"
                },
                {
                  text: "Officially TB Free"
                },
                {
                  text: "Medium"
                },
                {
                  html: '<a class="govuk-link" href="#" aria-label="View details for Valley View Holdings">View</a>'
                }
              ]
            ] %}

            {{ govukTable({
              head: [
                {
                  text: "CPH"
                },
                {
                  text: "Holding Name"
                },
                {
                  text: "Distance (km)"
                },
                {
                  text: "Direction"
                },
                {
                  text: "TB Status"
                },
                {
                  text: "Risk Level"
                },
                {
                  text: "Actions"
                }
              ],
              rows: neighboringHoldingsRows
            }) }}
          </div>

          <!-- Spatial Analysis Tools -->
          {{ govukDetails({
            summaryText: "Spatial Analysis Tools",
            html: '<div class="govuk-grid-row">
                     <div class="govuk-grid-column-one-half">
                       <h4 class="govuk-heading-s">Risk Modeling</h4>
                       <ul class="govuk-list govuk-list--bullet">
                         <li><a href="#" class="govuk-link">Generate risk heat map</a></li>
                         <li><a href="#" class="govuk-link">Badger density analysis</a></li>
                         <li><a href="#" class="govuk-link">Movement pathway modeling</a></li>
                       </ul>
                     </div>
                     <div class="govuk-grid-column-one-half">
                       <h4 class="govuk-heading-s">Reporting Tools</h4>
                       <ul class="govuk-list govuk-list--bullet">
                         <li><a href="#" class="govuk-link">Export map as PDF</a></li>
                         <li><a href="#" class="govuk-link">Generate buffer zone report</a></li>
                         <li><a href="#" class="govuk-link">Download spatial data</a></li>
                       </ul>
                     </div>
                   </div>'
          }) }}

          <!-- Buffer Zones -->
          <fieldset class="govuk-fieldset govuk-!-margin-top-6">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
              <h3 class="govuk-fieldset__heading">Buffer Zone Management</h3>
            </legend>
            
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-third">
                {{ govukInput({
                  label: {
                    text: "Surveillance Zone (km)",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Radius for surveillance testing"
                  },
                  id: "surveillance-zone",
                  name: "surveillance-zone",
                  value: "3.0",
                  type: "number",
                  step: "0.1",
                  classes: "govuk-input--width-5"
                }) }}
              </div>
              <div class="govuk-grid-column-one-third">
                {{ govukInput({
                  label: {
                    text: "Movement Zone (km)",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Radius for movement restrictions"
                  },
                  id: "movement-zone",
                  name: "movement-zone",
                  value: "1.0",
                  type: "number",
                  step: "0.1",
                  classes: "govuk-input--width-5"
                }) }}
              </div>
              <div class="govuk-grid-column-one-third">
                {{ govukInput({
                  label: {
                    text: "High Risk Zone (km)",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Radius for high risk area"
                  },
                  id: "high-risk-zone",
                  name: "high-risk-zone",
                  value: "0.5",
                  type: "number",
                  step: "0.1",
                  classes: "govuk-input--width-5"
                }) }}
              </div>
            </div>

            <div class="govuk-button-group govuk-!-margin-top-4">
              {{ govukButton({
                text: "Update Map Zones",
                classes: "govuk-button--secondary",
                name: "action",
                value: "update-zones"
              }) }}
            </div>
          </fieldset>

          <!-- Geographic Notes -->
          <div class="govuk-!-margin-top-6">
            {{ govukTextarea({
              name: "geographic-notes",
              id: "geographic-notes",
              label: {
                text: "Geographic Notes",
                classes: "govuk-label--m"
              },
              hint: {
                text: "Record any geographic observations or risk factors relevant to this case"
              },
              value: "Holding located in high badger density area. Adjacent to woodland with known badger setts. Public footpath crosses northern boundary.",
              rows: 4
            }) }}
          </div>

          <!-- Form Actions -->
          <div class="govuk-button-group govuk-!-margin-top-6">
            {{ govukButton({
              text: "Save and continue",
              type: "submit"
            }) }}
            
            {{ govukButton({
              text: "Save as draft",
              classes: "govuk-button--secondary",
              name: "action",
              value: "draft"
            }) }}
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
