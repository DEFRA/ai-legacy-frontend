{% extends 'layouts/page.njk' %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% set breadcrumbs = [
  {
    text: "Home",
    href: "/"
  },
  {
    text: "TB Case Form",
    href: "/tbcase/case-details"
  },
  {
    text: "Allocations",
    href: "/tbcase/allocations"
  }
] %}

{% block beforeContent %}
  {{ super() }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <!-- Close form button -->
      <div class="govuk-!-text-align-right govuk-!-margin-bottom-4">
        <a href="/" class="govuk-link" aria-label="Close TB Case Form">
          <span aria-hidden="true">âœ•</span> Close form
        </a>
      </div>
      
      <span class="govuk-caption-l">TBCMS</span>
      <h1 class="govuk-heading-l">TB Case Form - Abattoir Allocations</h1>
      
      <!-- Case Context Header -->
      <div class="govuk-summary-card govuk-!-margin-bottom-4">
        <div class="govuk-summary-card__title-wrapper">
          <h2 class="govuk-summary-card__title">Case Information</h2>
        </div>
        <div class="govuk-summary-card__content">
          <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">CPH:</dt>
              <dd class="govuk-summary-list__value">01/234/5678</dd>
            </div>
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">Nat Inc:</dt>
              <dd class="govuk-summary-list__value">25/12345</dd>
            </div>
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">Keeper:</dt>
              <dd class="govuk-summary-list__value">John Smith Farms Ltd</dd>
            </div>
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">Status:</dt>
              <dd class="govuk-summary-list__value">Under Restriction</dd>
            </div>
          </div>
        </div>
      </div>

      <!-- Service Navigation -->
      {% set activePage = "allocations" %}
      {% include "includes/tb-service-navigation.html" %}

      <!-- Allocations Content -->
      <div class="govuk-!-margin-top-6">
        {{ govukInsetText({
          text: "Abattoir allocations must be arranged for all reactor animals to ensure proper post-mortem examination."
        }) }}

        <form action="/tbcase/allocations" method="post" novalidate>
          
          <!-- Create New Allocation -->
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
              <h2 class="govuk-fieldset__heading">Create Abattoir Allocation</h2>
            </legend>
            
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-half">
                {{ govukSelect({
                  id: "abattoir",
                  name: "abattoir",
                  label: {
                    text: "Select Abattoir",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Choose approved abattoir for TB reactors"
                  },
                  items: [
                    {
                      value: "",
                      text: "Select an abattoir"
                    },
                    {
                      value: "devon-abattoir-ltd",
                      text: "Devon Abattoir Ltd - Exeter"
                    },
                    {
                      value: "southwest-meat-co",
                      text: "Southwest Meat Company - Plymouth"
                    },
                    {
                      value: "westcountry-abattoir",
                      text: "Westcountry Abattoir - Taunton"
                    },
                    {
                      value: "cornwall-meat-plant",
                      text: "Cornwall Meat Plant - Bodmin"
                    }
                  ]
                }) }}
              </div>
              <div class="govuk-grid-column-one-half">
                {{ govukInput({
                  label: {
                    text: "Abattoir Contact",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Contact person at the abattoir"
                  },
                  id: "abattoir-contact",
                  name: "abattoir-contact",
                  classes: "govuk-input--width-20"
                }) }}
              </div>
            </div>

            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-third">
                {{ govukDateInput({
                  id: "allocation-date",
                  namePrefix: "allocation-date",
                  fieldset: {
                    legend: {
                      text: "Allocation Date",
                      classes: "govuk-fieldset__legend--s"
                    }
                  },
                  hint: {
                    text: "Date animals will be delivered"
                  },
                  items: [
                    {
                      name: "day",
                      classes: "govuk-input--width-2"
                    },
                    {
                      name: "month",
                      classes: "govuk-input--width-2"
                    },
                    {
                      name: "year",
                      classes: "govuk-input--width-4"
                    }
                  ]
                }) }}
              </div>
              <div class="govuk-grid-column-one-third">
                {{ govukInput({
                  label: {
                    text: "Number of Animals",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Total animals for this allocation"
                  },
                  id: "number-animals",
                  name: "number-animals",
                  type: "number",
                  classes: "govuk-input--width-5"
                }) }}
              </div>
              <div class="govuk-grid-column-one-third">
                {{ govukInput({
                  label: {
                    text: "Reference Number",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Abattoir reference or booking number"
                  },
                  id: "reference-number",
                  name: "reference-number",
                  classes: "govuk-input--width-15"
                }) }}
              </div>
            </div>

            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-half">
                {{ govukSelect({
                  id: "allocation-priority",
                  name: "allocation-priority",
                  label: {
                    text: "Priority Level",
                    classes: "govuk-label--s"
                  },
                  items: [
                    {
                      value: "",
                      text: "Select priority"
                    },
                    {
                      value: "urgent",
                      text: "Urgent (Within 24 hours)"
                    },
                    {
                      value: "high",
                      text: "High (Within 3 days)"
                    },
                    {
                      value: "normal",
                      text: "Normal (Within 5 days)"
                    }
                  ]
                }) }}
              </div>
              <div class="govuk-grid-column-one-half">
                {{ govukCheckboxes({
                  name: "special-requirements",
                  fieldset: {
                    legend: {
                      text: "Special Requirements",
                      classes: "govuk-fieldset__legend--s"
                    }
                  },
                  items: [
                    {
                      value: "pm-examination",
                      text: "Post-mortem examination required"
                    },
                    {
                      value: "veterinary-presence",
                      text: "Veterinary presence required"
                    },
                    {
                      value: "sampling-required",
                      text: "Tissue sampling required"
                    }
                  ]
                }) }}
              </div>
            </div>

            <!-- Animal Selection -->
            <fieldset class="govuk-fieldset govuk-!-margin-top-4">
              <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                <h3 class="govuk-fieldset__heading">Select Animals for Allocation</h3>
              </legend>
              
              {% set animalSelectionRows = [
                [
                  {
                    html: '<div class="govuk-checkboxes__item">
                             <input class="govuk-checkboxes__input" id="animal-uk123456789" name="selected-animals" type="checkbox" value="UK123456789">
                             <label class="govuk-label govuk-checkboxes__label" for="animal-uk123456789">
                               Select
                             </label>
                           </div>'
                  },
                  {
                    text: "UK123456789"
                  },
                  {
                    text: "Holstein"
                  },
                  {
                    text: "TB Reactor"
                  },
                  {
                    text: "15/01/2025"
                  },
                  {
                    text: "Pending"
                  }
                ],
                [
                  {
                    html: '<div class="govuk-checkboxes__item">
                             <input class="govuk-checkboxes__input" id="animal-uk987654321" name="selected-animals" type="checkbox" value="UK987654321">
                             <label class="govuk-label govuk-checkboxes__label" for="animal-uk987654321">
                               Select
                             </label>
                           </div>'
                  },
                  {
                    text: "UK987654321"
                  },
                  {
                    text: "Limousin"
                  },
                  {
                    text: "Inconclusive Reactor"
                  },
                  {
                    text: "16/01/2025"
                  },
                  {
                    text: "Pending"
                  }
                ]
              ] %}

              {{ govukTable({
                head: [
                  {
                    text: ""
                  },
                  {
                    text: "Eartag Number"
                  },
                  {
                    text: "Breed"
                  },
                  {
                    text: "Reason"
                  },
                  {
                    text: "Identified Date"
                  },
                  {
                    text: "Status"
                  }
                ],
                rows: animalSelectionRows,
                classes: "govuk-!-margin-top-2"
              }) }}
            </fieldset>

            <div class="govuk-!-margin-top-4">
              {{ govukTextarea({
                name: "allocation-notes",
                id: "allocation-notes",
                label: {
                  text: "Additional Notes",
                  classes: "govuk-label--s"
                },
                hint: {
                  text: "Any special instructions or requirements for this allocation"
                },
                rows: 3
              }) }}
            </div>

            <div class="govuk-button-group govuk-!-margin-top-4">
              {{ govukButton({
                text: "Create Allocation",
                name: "action",
                value: "create-allocation"
              }) }}
            </div>
          </fieldset>

          <!-- Current Allocations -->
          <div class="govuk-!-margin-top-8">
            <h3 class="govuk-heading-m">Current Allocations</h3>
            
            {% set allocationsTableRows = [
              [
                {
                  text: "ALL-2025-001"
                },
                {
                  text: "Devon Abattoir Ltd"
                },
                {
                  text: "20/01/2025"
                },
                {
                  text: "2"
                },
                {
                  text: "High"
                },
                {
                  text: "Confirmed"
                },
                {
                  html: '<a class="govuk-link" href="#" aria-label="View allocation ALL-2025-001">View</a> | <a class="govuk-link" href="#" aria-label="Edit allocation ALL-2025-001">Edit</a>'
                }
              ],
              [
                {
                  text: "ALL-2025-002"
                },
                {
                  text: "Southwest Meat Company"
                },
                {
                  text: "25/01/2025"
                },
                {
                  text: "1"
                },
                {
                  text: "Normal"
                },
                {
                  text: "Pending"
                },
                {
                  html: '<a class="govuk-link" href="#" aria-label="View allocation ALL-2025-002">View</a> | <a class="govuk-link" href="#" aria-label="Edit allocation ALL-2025-002">Edit</a>'
                }
              ]
            ] %}

            {{ govukTable({
              head: [
                {
                  text: "Allocation ID"
                },
                {
                  text: "Abattoir"
                },
                {
                  text: "Allocation Date"
                },
                {
                  text: "Animals"
                },
                {
                  text: "Priority"
                },
                {
                  text: "Status"
                },
                {
                  text: "Actions"
                }
              ],
              rows: allocationsTableRows,
              classes: "govuk-!-margin-top-4"
            }) }}
          </div>

          <!-- Allocation Summary -->
          <div class="govuk-!-margin-top-6">
            <div class="govuk-summary-card">
              <div class="govuk-summary-card__title-wrapper">
                <h3 class="govuk-summary-card__title">Allocation Summary</h3>
              </div>
              <div class="govuk-summary-card__content">
                <div class="govuk-grid-row">
                  <div class="govuk-grid-column-one-quarter">
                    <dt class="govuk-summary-list__key">Total Allocations:</dt>
                    <dd class="govuk-summary-list__value govuk-!-font-weight-bold">2</dd>
                  </div>
                  <div class="govuk-grid-column-one-quarter">
                    <dt class="govuk-summary-list__key">Animals Allocated:</dt>
                    <dd class="govuk-summary-list__value">3</dd>
                  </div>
                  <div class="govuk-grid-column-one-quarter">
                    <dt class="govuk-summary-list__key">Pending Animals:</dt>
                    <dd class="govuk-summary-list__value">2</dd>
                  </div>
                  <div class="govuk-grid-column-one-quarter">
                    <dt class="govuk-summary-list__key">Urgent Pending:</dt>
                    <dd class="govuk-summary-list__value">0</dd>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Abattoir Information -->
          {{ govukDetails({
            summaryText: "Approved Abattoirs Information",
            html: '<div class="govuk-grid-row">
                     <div class="govuk-grid-column-one-half">
                       <h4 class="govuk-heading-s">Devon Abattoir Ltd</h4>
                       <p class="govuk-body-s">
                         Address: Industrial Estate, Exeter, EX2 8AB<br>
                         Contact: 01392 123456<br>
                         Capacity: 50 cattle/day<br>
                         PM facilities: Yes
                       </p>
                     </div>
                     <div class="govuk-grid-column-one-half">
                       <h4 class="govuk-heading-s">Southwest Meat Company</h4>
                       <p class="govuk-body-s">
                         Address: Dockyard Road, Plymouth, PL1 3DX<br>
                         Contact: 01752 987654<br>
                         Capacity: 30 cattle/day<br>
                         PM facilities: Yes
                       </p>
                     </div>
                   </div>'
          }) }}

          <!-- Form Actions -->
          <div class="govuk-button-group govuk-!-margin-top-6">
            {{ govukButton({
              text: "Save and continue",
              type: "submit"
            }) }}
            
            {{ govukButton({
              text: "Save as draft",
              classes: "govuk-button--secondary",
              name: "action",
              value: "draft"
            }) }}
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
