{% extends 'layouts/page.njk' %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% set breadcrumbs = [
  {
    text: "Home",
    href: "/"
  },
  {
    text: "TB Case Form",
    href: "/tbcase/case-details"
  },
  {
    text: "Removals",
    href: "/tbcase/removals"
  }
] %}

{% block beforeContent %}
  {{ super() }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <!-- Close form button -->
      <div class="govuk-!-text-align-right govuk-!-margin-bottom-4">
        <a href="/" class="govuk-link" aria-label="Close TB Case Form">
          <span aria-hidden="true">âœ•</span> Close form
        </a>
      </div>
      
      <span class="govuk-caption-l">TBCMS</span>
      <h1 class="govuk-heading-l">TB Case Form - Reactor Removals</h1>
      
      <!-- Case Context Header -->
      <div class="govuk-summary-card govuk-!-margin-bottom-4">
        <div class="govuk-summary-card__title-wrapper">
          <h2 class="govuk-summary-card__title">Case Information</h2>
        </div>
        <div class="govuk-summary-card__content">
          <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">CPH:</dt>
              <dd class="govuk-summary-list__value">01/234/5678</dd>
            </div>
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">Nat Inc:</dt>
              <dd class="govuk-summary-list__value">25/12345</dd>
            </div>
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">Keeper:</dt>
              <dd class="govuk-summary-list__value">John Smith Farms Ltd</dd>
            </div>
            <div class="govuk-grid-column-one-quarter">
              <dt class="govuk-summary-list__key">Status:</dt>
              <dd class="govuk-summary-list__value">Under Restriction</dd>
            </div>
          </div>
        </div>
      </div>

      <!-- Service Navigation -->
      {% set activePage = "removals" %}
      {% include "includes/tb-service-navigation.html" %}

      <!-- Removals Content -->
      <div class="govuk-!-margin-top-6">
        {{ govukWarningText({
          text: "All reactor animals must be removed within 5 working days of notification",
          iconFallbackText: "Warning"
        }) }}

        <form action="/tbcase/removals" method="post" novalidate>
          
          <!-- Add New Removal -->
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
              <h2 class="govuk-fieldset__heading">Record Animal Removal</h2>
            </legend>
            
            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-quarter">
                {{ govukInput({
                  label: {
                    text: "Eartag Number",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Enter the full eartag number"
                  },
                  id: "eartag-number",
                  name: "eartag-number",
                  classes: "govuk-input--width-10"
                }) }}
              </div>
              <div class="govuk-grid-column-one-quarter">
                {{ govukSelect({
                  id: "removal-reason",
                  name: "removal-reason",
                  label: {
                    text: "Removal Reason",
                    classes: "govuk-label--s"
                  },
                  items: [
                    {
                      value: "",
                      text: "Select reason"
                    },
                    {
                      value: "tb-reactor",
                      text: "TB Reactor"
                    },
                    {
                      value: "tb-lesion",
                      text: "TB Lesion"
                    },
                    {
                      value: "inconclusive-reactor",
                      text: "Inconclusive Reactor"
                    },
                    {
                      value: "dangerous-contact",
                      text: "Dangerous Contact"
                    }
                  ]
                }) }}
              </div>
              <div class="govuk-grid-column-one-quarter">
                {{ govukDateInput({
                  id: "removal-date",
                  namePrefix: "removal-date",
                  fieldset: {
                    legend: {
                      text: "Removal Date",
                      classes: "govuk-fieldset__legend--s"
                    }
                  },
                  hint: {
                    text: "For example, 27 3 2025"
                  },
                  items: [
                    {
                      name: "day",
                      classes: "govuk-input--width-2"
                    },
                    {
                      name: "month",
                      classes: "govuk-input--width-2"
                    },
                    {
                      name: "year",
                      classes: "govuk-input--width-4"
                    }
                  ]
                }) }}
              </div>
              <div class="govuk-grid-column-one-quarter">
                {{ govukInput({
                  label: {
                    text: "Destination",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Abattoir or other destination"
                  },
                  id: "destination",
                  name: "destination",
                  classes: "govuk-input--width-20"
                }) }}
              </div>
            </div>

            <div class="govuk-grid-row">
              <div class="govuk-grid-column-one-half">
                {{ govukRadios({
                  name: "removal-method",
                  fieldset: {
                    legend: {
                      text: "Removal Method",
                      classes: "govuk-fieldset__legend--s"
                    }
                  },
                  items: [
                    {
                      value: "abattoir",
                      text: "Abattoir"
                    },
                    {
                      value: "knackery",
                      text: "Knackery"
                    },
                    {
                      value: "on-farm",
                      text: "On-farm disposal"
                    },
                    {
                      value: "other",
                      text: "Other"
                    }
                  ]
                }) }}
              </div>
              <div class="govuk-grid-column-one-half">
                {{ govukTextarea({
                  name: "removal-notes",
                  id: "removal-notes",
                  label: {
                    text: "Additional Notes",
                    classes: "govuk-label--s"
                  },
                  hint: {
                    text: "Any additional information about this removal"
                  },
                  rows: 3
                }) }}
              </div>
            </div>

            <div class="govuk-button-group govuk-!-margin-top-4">
              {{ govukButton({
                text: "Add Removal",
                name: "action",
                value: "add-removal"
              }) }}
            </div>
          </fieldset>

          <!-- Current Removals Table -->
          <div class="govuk-!-margin-top-8">
            <h3 class="govuk-heading-m">Recorded Removals</h3>
            
            {% set removalsTableRows = [
              [
                {
                  text: "UK123456789"
                },
                {
                  text: "TB Reactor"
                },
                {
                  text: "15/01/2025"
                },
                {
                  text: "Devon Abattoir Ltd"
                },
                {
                  text: "Abattoir"
                },
                {
                  html: '<a class="govuk-link" href="#" aria-label="Edit removal for eartag UK123456789">Edit</a> | <a class="govuk-link govuk-link--destructive" href="#" aria-label="Delete removal for eartag UK123456789">Delete</a>'
                }
              ],
              [
                {
                  text: "UK987654321"
                },
                {
                  text: "Inconclusive Reactor"
                },
                {
                  text: "16/01/2025"
                },
                {
                  text: "Southwest Knackery"
                },
                {
                  text: "Knackery"
                },
                {
                  html: '<a class="govuk-link" href="#" aria-label="Edit removal for eartag UK987654321">Edit</a> | <a class="govuk-link govuk-link--destructive" href="#" aria-label="Delete removal for eartag UK987654321">Delete</a>'
                }
              ]
            ] %}

            {{ govukTable({
              head: [
                {
                  text: "Eartag Number"
                },
                {
                  text: "Removal Reason"
                },
                {
                  text: "Removal Date"
                },
                {
                  text: "Destination"
                },
                {
                  text: "Method"
                },
                {
                  text: "Actions"
                }
              ],
              rows: removalsTableRows,
              classes: "govuk-!-margin-top-4"
            }) }}
          </div>

          <!-- Removal Summary -->
          <div class="govuk-!-margin-top-6">
            <div class="govuk-summary-card">
              <div class="govuk-summary-card__title-wrapper">
                <h3 class="govuk-summary-card__title">Removal Summary</h3>
              </div>
              <div class="govuk-summary-card__content">
                <div class="govuk-grid-row">
                  <div class="govuk-grid-column-one-quarter">
                    <dt class="govuk-summary-list__key">Total Removals:</dt>
                    <dd class="govuk-summary-list__value govuk-!-font-weight-bold">2</dd>
                  </div>
                  <div class="govuk-grid-column-one-quarter">
                    <dt class="govuk-summary-list__key">TB Reactors:</dt>
                    <dd class="govuk-summary-list__value">1</dd>
                  </div>
                  <div class="govuk-grid-column-one-quarter">
                    <dt class="govuk-summary-list__key">Inconclusive:</dt>
                    <dd class="govuk-summary-list__value">1</dd>
                  </div>
                  <div class="govuk-grid-column-one-quarter">
                    <dt class="govuk-summary-list__key">Dangerous Contacts:</dt>
                    <dd class="govuk-summary-list__value">0</dd>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="govuk-button-group govuk-!-margin-top-6">
            {{ govukButton({
              text: "Save and continue",
              type: "submit"
            }) }}
            
            {{ govukButton({
              text: "Save as draft",
              classes: "govuk-button--secondary",
              name: "action",
              value: "draft"
            }) }}
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
